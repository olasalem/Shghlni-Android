<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}" >

		<Spinner
		    android:id="@+id/SkillsSpinner"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/Searchprompt"
		    android:layout_centerHorizontal="true"
		    android:layout_marginLeft="15dp"
		    android:layout_marginTop="125dp"
		    android:textSize="15sp" />

        <TextView
            android:id="@+id/Areaprompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SkillsSpinner"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Search In:"
            android:textColor="#357EC7"
            android:textSize="15sp" />

        <Button
            android:id="@+id/SearchButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AreaSpinner"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:text="Search" >
        </Button>

        <TextView
            android:id="@+id/Searchprompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Qualification: "
            android:textColor="#357EC7"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/AreaSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/SkillsSpinner"
            android:layout_below="@+id/Areaprompt"
            android:layout_marginTop="33dp"
            android:textSize="15sp" />

</RelativeLayout>

